{
    "$schema": "https://api.pbuilder.dev",
    "collections": {
        "@danils/schematicskit": {
            "remove-folder-content": {},
            "empty-folder": {},
            "prettier": {}
        }
    },

    "prettier": {
        "settings": {
            "gitHooks": true,
            "quoteProps": "preserve",
            "singleQuote": true,
            "trailingComma": "all",
            "printWidth": 80
        }
    },

    "remove-folder-content": {
        "settings": {
            "name": "src",
            "excludeFiles": "collection.json"
        },
        "children": {
            "empty-folder": {
                "instances": [
                    {
                        "settings": {"name": "src/builder-add"}
                    },
                    {
                        "settings": {"name": "src/builder-generate"}
                    }
                ]
            }
        }
    }
}